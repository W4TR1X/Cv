<MudLink style="user-select:none;" OnClick="AnchorOnClickAsync">[@(Text ?? Id)]</MudLink>
@code {
    [Inject] protected IJSRuntime JSRuntime { get; set; } = null!;

    [Parameter] public string Id { get; set; } = default!;
    [Parameter] public string? Text { get; set; } = default!;

    private async Task AnchorOnClickAsync()
    {
        await JSRuntime.InvokeVoidAsync("BlazorScrollToId", Id);
    }
}
